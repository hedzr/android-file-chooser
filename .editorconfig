root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


[*.{java,kt}]
indent_style = space
indent_size = 4

[*.{xml,xsl}]
indent_style = space
indent_size = 4

[*.{gradle,groovy}]
indent_style = space
indent_size = 4

[*.md]
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = false

[*.bat]
indent_style = tab
indent_size = 4
end_of_line = crlf
